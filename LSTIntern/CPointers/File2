//2
#include<stdio.h>
int main(){
    int a=10;
       int *ptr1=&a;
       // ptr2 is same as ptr1(i.e. points to &a) 
       int *ptr2=ptr1;
       printf("the value of a through ptr1 is %d\n",*ptr1);       
       printf("the value of a through ptr1 is %d\n",*ptr2);
       // ways of updating
       *ptr1=20;
       // *ptr1=*ptr1+1;
       printf("the value of a after updated is %d\n",a);
       
return 0;
}
/*
output
the value of a through ptr1 is 10
the value of a through ptr1 is 10
the value of a after updated is 20
*/
