//2
#include<stdio.h>
int main(){
    
    // wild pointer
    int a=10;
    int *ptr=10;//here 10 is assumed to be an address
    printf("value of ptr is %d\n",ptr);
    printf("the value at the address 10 is %d\n",*ptr);
    
    
return 0;
}
